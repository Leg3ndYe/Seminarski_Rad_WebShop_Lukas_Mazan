@model Motorcycle_WebShop.Data.ApplicationUser
@using Microsoft.AspNetCore.Identity
@using Motorcycle_WebShop.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2> 

<h3>Are you sure you want to delete {@Model.Role} {@Model.Email}</h3>
<div>
    <dl class="row">
        <hr />
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class="col-sm-3">
            Avatar
        </dt>
        <dd class="col-sm-9">
            @if (Model.AvatarFilePath != null)
            {
                <div class="col-sm-3">
                    <img src="@Model.AvatarFilePath" height="75">
                </div>
            }
            else
            {
                <div class="col-sm-3">
                    <img src="~/images/noimage.jpg" height="75">
                </div>
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-3">
            Status
        </dt>
        <dd class="col-sm-9">
            @if (!Model.IsActive)
            {
                <div class="text-center rounded-2" style="background-color:red; text-decoration:none; width:128px">
                    <label style="color:white" class="fw-bold">Inactive</label>
                </div>
            }
            else
            {
                <div class="text-center rounded-2" style="background-color:lightgreen; text-decoration:none; width:128px">
                    <label style="color:white" class="fw-bold">Active</label>
                </div>
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.EmailConfirmed)
        </dt>
        <dd class="col-sm-9">
            @if (!Model.EmailConfirmed)
            {
                <div class="text-center rounded-2" style="background-color:red; text-decoration:none; width:128px">
                    <label style="color:white" class="fw-bold">No</label>
                </div>
            }
            else
            {
                <div class="text-center rounded-2" style="background-color:lightgreen; text-decoration:none; width:128px">
                    <label style="color:white" class="fw-bold">Yes</label>
                </div>
            }
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.TwoFactorEnabled)
        </dt>
        <dd class="col-sm-9">
            @if (!Model.TwoFactorEnabled)
            {
                <div class="text-center rounded-2" style="background-color:red; text-decoration:none; width:128px">
                    <label style="color:white" class="fw-bold">No</label>
                </div>
            }
            else
            {
                <div class="text-center rounded-2" style="background-color:lightgreen; text-decoration:none; width:128px">
                    <label style="color:white" class="fw-bold">Yes</label>
                </div>
            }
        </dd>
        <dt class="col-sm-3">
            Last Login At
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.LastLoginAt)
        </dd>
        <dt class="col-sm-3">
            Last Known IP Address
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.LastKnownIpAddress)
        </dd>
    </dl>
    <br />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
