@model Motorcycle_WebShop.Models.ProductImage

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Main image
        </dt>
        <dd class = "col-sm-10">
            @{
                if (!Model.IsMainImage)
                {
                    <div class="text-center rounded-2" style="background-color:red; text-decoration:none; width:96px">
                        <label style="color:white" class="fw-bold">No</label>
                    </div>
                }
                else
                {
                    <div class="text-center rounded-2" style="background-color:limegreen; text-decoration:none; width:96px">
                        <label style="color:white" class="fw-bold">Yes</label>
                    </div>
                }
            }
        </dd>
        <dt class = "col-sm-2">
            Image
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.FilePath" alt="@Model.Title" height="100"/>
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" asp-route-id="@Model.ProductId" class="btn btn-secondary">Back to List</a>
    </form>
</div>
